@model UsersListViewModels
@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2><br />

<table class="table table-striped table-hover">
    <thead>
        <tr class="info lead">
            <td>Customer</td>
            <td>Edit</td>
            <td>Delete</td>
            <td>Admin</td>
            <td>Manager</td>
            <td>Moderator</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UsersRoles)
        {
            <tr>
                <td>
                    @item.Key.UserName
                </td>
                <td>
                    <a href="edituser/@item.Key.Id"><img src="~/fonts/glyphicons_030_pencil.png" /></a>
                </td>
                <td>
                    <a href="deleteuser/@item.Key.Id"><img src="~/fonts/glyphicons_016_bin.png" /></a>
                </td>

                    @if (item.Value.IsAdmin)
                    {
                        <td>
                            <img src="~/fonts/glyphicons_193_circle_ok.png" />
                        </td>
                    }
                    else
                    {
                        <td>
                            <img src="~/fonts/glyphicons_192_circle_remove.png" />
                        </td>
                    }

                    @if (item.Value.IsManager)
                    {
                        <td>
                            <img src="~/fonts/glyphicons_193_circle_ok.png" />
                        </td>
                    }
                    else
                    {
                        <td>
                            <img src="~/fonts/glyphicons_192_circle_remove.png" />
                        </td>
                    }

                    @if (item.Value.IsModerator)
                    {
                        <td>
                            <img src="~/fonts/glyphicons_193_circle_ok.png" />
                        </td>
                    }
                    else
                    {
                        <td>
                            <img src="~/fonts/glyphicons_192_circle_remove.png" />
                        </td>
                    }

            </tr>
        }
    </tbody>
</table>


<div class="row">
    <div class="form-group">
        <div class="col-md-offset-5 col-md-7">
            <nav>
                <ul class="pagination">
                    @Html.Partial("~/Views/Shared/_PagingPartial.cshtml", Model);
                </ul>
            </nav>
        </div>
    </div>
</div>