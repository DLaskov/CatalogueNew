@model UsersListViewModels
@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2><br />

<table class="table table-striped table-hover">
    <thead>
        <tr class="info lead">
            <td>Customer</td>
            <td>Edit</td>
            <td>Delete</td>
            <td>Admin</td>
            <td>Manager</td>
            <td>Moderator</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @item.UserName
                </td>
                <td>
                    <a href="edituser/@item.Id"><img src="~/fonts/glyphicons_030_pencil.png" /></a>
                </td>
                <td>
                    <a href="deleteuser/@item.Id"><img src="~/fonts/glyphicons_016_bin.png" /></a>
                </td>
                    @Html.Action("UserRole", "Admin", new { id = @item.Id })
            </tr>
        }
    </tbody>
</table>


<div class="row">
    <div class="form-group">
        <div class="col-md-offset-5 col-md-7">
            <nav>
                <ul class="pagination">
                    @{
                        PagingViewModel pageModel = new PagingViewModel
                        {
                            Count = Model.Count,
                            Page = (int)Model.Page
                        };                     
                    }

                    @Html.Partial("~/Views/Shared/_PagingPartial.cshtml", pageModel);
                </ul>
            </nav>
        </div>
    </div>
</div>