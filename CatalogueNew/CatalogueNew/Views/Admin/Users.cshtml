@model UsersListViewModels
@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2><br />

<table class="table table-striped table-hover">
    <thead>
        <tr class="info lead">
            <td>Customer</td>
            <td>Edit</td>
            <td>Delete</td>
            <td>Admin</td>
            <td>Manager</td>
            <td>Moderator</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.UsersRoles != null)
        {
            foreach (var item in Model.UsersRoles)
            {
                <tr>
                    <td>
                        @item.Key.UserName
                    </td>
                    <td>
                        <a href="edituser/@item.Key.Id"><img src="~/fonts/glyphicons_030_pencil.png" /></a>
                    </td>
                    <td>
                        <a href="deleteuser/@item.Key.Id"><img src="~/fonts/glyphicons_016_bin.png" /></a>
                    </td>

                    @if (item.Value.IsAdmin)
                    {
                        <td>
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </td>
                    }

                    @if (item.Value.IsManager)
                    {
                        <td>
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </td>
                    }

                    @if (item.Value.IsModerator)
                    {
                        <td>
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </td>
                    }

                </tr>
            }
        }
    </tbody>
</table>

@Html.Partial("~/Views/Shared/_PagingPartial.cshtml", Model.PagingViewModel)