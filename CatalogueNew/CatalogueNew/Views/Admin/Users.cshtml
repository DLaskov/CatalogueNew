@model UsersListViewModel
@{
    ViewBag.Title = "Customers";
}

<h2 class="headline4">Customers</h2><br />

<table class="table table-striped table-hover">
    <thead>
        <tr class="info lead">
            <td>Customer</td>
            <td>Edit</td>
            <td>Delete</td>
            <td>Admin</td>
            <td>Manager</td>
            <td>Moderator</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.UsersRoles != null)
        {
            foreach (var item in Model.UsersRoles)
            {
                <tr>
                    <td>
                        @item.Key.UserName
                    </td>
                    <td>
                        <a href="edituser/@item.Key.Id"><span id="glyph-user" class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    </td>
                    <td>
                        <a href="deleteuser/@item.Key.Id"><span id="glyph-user" class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></a>
                    </td>

                    @if (item.Value.IsAdmin)
                    {
                        <td>
                            <span id="glyph-user" class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span id="glyph-user" class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </td>
                    }

                    @if (item.Value.IsManager)
                    {
                        <td>
                            <span id="glyph-user" class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span id="glyph-user" class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </td>
                    }

                    @if (item.Value.IsModerator)
                    {
                        <td>
                            <span id="glyph-user" class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span id="glyph-user" class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </td>
                    }

                </tr>
            }
        }
    </tbody>
</table>

@Html.Partial("~/Views/Shared/_PagingPartial.cshtml", Model.PagingViewModel)