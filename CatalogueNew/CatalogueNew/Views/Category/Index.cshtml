@model CategoryListViewModel

@{
    ViewBag.Title = "Category";
}

<h2 class="headline4">Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="info lead">
            <th>Categories</th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.Categories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="Category/Edit/@item.CategoryID"><span id="glyph-cate" class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                </td>
                <td>
                    <a href="Category/Details/@item.CategoryID"><span id="glyph-cate" class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a>
                </td>
                <td>
                    <a href="Category/Delete/@item.CategoryID"><span id="glyph-cate" class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("~/Views/Shared/_PagingPartial.cshtml", Model.PagingViewModel)