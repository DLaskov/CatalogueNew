@model CatalogueNew.Web.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
}
<h2>Register</h2>
<div>
    All fields marked with <span class="required">*</span> are required!
</div>
<br />
@Html.ValidationSummary(true)

@using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "registerForm" }))
{  
    <div class="form-group">
        <label for="@Html.IdFor(x => x.UserName)">Username<span class="required">*</span></label>
        <input type="text" class="form-control" id="@Html.IdFor(x => x.UserName)" name="@Html.IdFor(x => x.UserName)"
               placeholder="Enter username" required="required" />
    </div>

    <div class="form-group">
        <label for="@Html.IdFor(x => x.Password)">Password<span class="required">*</span></label>
        <input type="password" class="form-control" id="@Html.IdFor(x => x.Password)" name="@Html.IdFor(x => x.Password)"
               placeholder="Enter password" required="required" />
    </div>
    <div class="form-group">
        <label for="passwordConfirm">Confirm password<span class="required">*</span></label>
        <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm"
               placeholder="Confirm password" required="required" />
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(x => x.FirstName)">First name<span class="required">*</span></label>
        <input type="text" class="form-control" id="@Html.IdFor(x => x.FirstName)" name="@Html.IdFor(x => x.FirstName)"
               placeholder="Enter first name" required="required" />
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(x => x.LastName)">Last name</label>
        <input type="text" class="form-control" id="@Html.IdFor(x => x.LastName)" name="@Html.IdFor(x => x.LastName)"
               placeholder="Enter last name" />
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(x => x.Email)">Email<span class="required">*</span></label>
        <input type="email" class="form-control" id="@Html.IdFor(x => x.Email)" name="@Html.IdFor(x => x.Email)"
               placeholder="Enter email" required="required" />
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(x => x.BirthDate)">Birth date </label>
        <input type="date" class="form-control" id="@Html.IdFor(x => x.BirthDate)" name="@Html.IdFor(x => x.BirthDate)" />
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(x => x.Gender)">Gender </label>
        <div class="col-xs-offset-1">
            <input type="radio" id="radioMale" class="radio-inline"
                   name="@Html.IdFor(x => x.Gender)" value="Male" />&nbsp;
            <label for="radioMale">Male</label>
            <input type="radio" id="radioFemale" class="radio-inline"
                   name="@Html.IdFor(x => x.Gender)" value="Female" />&nbsp;
            <label for="radioFemale">Female</label>
        </div>
    </div>
    <input type="submit" class="btn btn-default" value="Register" />
}
<script language="javascript">
    $("#registerForm").submit(function (event) {
        if ($("#@Html.IdFor(x => x.Password)").val() != $("#passwordConfirm").val()) {
            $("#passwordConfirm").after("<p>Password doesn't match.</p>");
            event.preventDefault();            
        }
        if ($("#@Html.IdFor(x => x.UserName)").val() == $("#@Html.IdFor(x => x.Password)").val()) {
            $("#@Html.IdFor(x => x.Password)").after("<p>Password must be different from username.</p>");
            event.preventDefault();          
        }
        return;
    })
</script>