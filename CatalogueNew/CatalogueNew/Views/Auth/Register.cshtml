@model CatalogueNew.Web.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
}
<h2>Register</h2>
<div>
    All fields marked with <span class="required">*</span> are required!
</div>
<br />
@using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @id = "registerForm", @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <label for="@Html.IdFor(x => x.UserName)">Username<span class="required">*</span></label>
        <input type="text" class="form-control" id="@Html.IdFor(x => x.UserName)"
               placeholder="Enter username" required />
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(x => x.Password)">Password<span class="required">*</span></label>
        <input type="password" class="form-control" id="@Html.IdFor(x => x.Password)"
               placeholder="Enter password" required />
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(x => x.FirstName)">First name<span class="required">*</span></label>
        <input type="text" class="form-control" id="@Html.IdFor(x => x.FirstName)"
               placeholder="Enter first name" required />
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(x => x.LastName)">Last name</label>
        <input type="text" class="form-control" id="@Html.IdFor(x => x.LastName)"
               placeholder="Enter last name" />
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(x => x.Email)">Email<span class="required">*</span></label>
        <input type="email" class="form-control" id="@Html.IdFor(x => x.Email)"
               placeholder="Enter email" required />
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(x => x.BirthDate)">Birth date </label>
        <input type="date" class="form-control" id="@Html.IdFor(x => x.BirthDate)" />
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(x => x.Gender)">Gender </label>
        <div class="col-xs-offset-1">
            @Html.RadioButtonFor(x => x.Gender, "Male", new { @class = "radio-inline" }) Male
            @Html.RadioButtonFor(x => x.Gender, "Female", new { @class = "radio-inline" }) Female
        </div>
    </div>
    <input type="submit" class="btn btn-default" value="Register" />
    @Scripts.Render("~/Scripts/jquery.validate")
    <script>
        $("#registerForm").validate();
    </script>
}