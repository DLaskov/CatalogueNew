@model CatalogueNew.Web.Models.ProductViewModel

@{
    ViewBag.Title = "Create product";
}

<h2>Create product</h2>

@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="col-md-offset-4">

        <div class="form-group">
            All fields marked with <span class="required">*</span> are required!
        </div>

        <div class="form-group">
            <label for="@Html.IdFor(model => model.Name)">Name <span class="required">*</span></label>
            <input type="text" id="@Html.IdFor(model => model.Name)" name="@Html.IdFor(model => model.Name)"
                   placeholder="Enter product name" required="required" class="form-control" />
        </div>
            
        <div class="form-group">
            <label for="@Html.IdFor(model => model.CategoryID)">Category <span class="required">*</span></label>
            <select name="@Html.IdFor(model => model.CategoryID)" class="form-control">
                <option value="" disabled selected>Select category</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.CategoryID">@category.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="@Html.IdFor(model => model.ManufactureID)">Manufacturer <span class="required">*</span></label>
            <select name="@Html.IdFor(model => model.ManufactureID)" class="form-control">
                <option value="" disabled selected>Select manufacturer</option>
                @foreach (var manufacturer in Model.Manufacturers)
                {
                    <option value="@manufacturer.ManufacturerID">@manufacturer.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="@Html.IdFor(model => model.Year)">Year <span class="required">*</span></label>
            <select name="@Html.IdFor(model => model.Year)" class="form-control">
                <option value="" disabled selected>Select year</option>
                @{
                int year = DateTime.Now.Year;
                for (int i = year + 1; i > year - 21; i--)
                {
                    <option value="@i">@i</option>
                }
                }
            </select>
        </div>
        <div class="form-group">
            <label for="@Html.IdFor(model => model.Description)">Description <span class="required">*</span></label>
            <textarea maxlength="1000" name="@Html.IdFor(model => model.Description)"
                       id="@Html.IdFor(model => model.Description)" class="form-control"></textarea>
        </div>

        <input type="submit" class="btn btn-success" value="Create product" />
    </div>
}