@model CatalogueNew.Web.Models.ProductListViewModel

@{
    ViewBag.Title = "Products";
}

<h2 class="headline4">@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="info lead">
            <th>
                @Html.DisplayNameFor(model => model.Products)
            </th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="Edit/@item.ProductID"><span id="glyph-manu" class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                </td>
                <td>
                    <a href="Details/@item.ProductID"><span id="glyph-manu" class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a>
                </td>
                <td>
                    <a href="Delete/@item.ProductID" onclick="return confirm('You are going to delete this product.')"><span id="glyph-manu" class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("~/Views/Shared/_PagingPartial.cshtml", @Model.PagingViewModel)