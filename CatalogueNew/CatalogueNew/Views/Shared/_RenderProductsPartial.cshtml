@model ProductListViewModel

<br />
<div id="documentsList">
    <div class="row">
        @for (int i = 0; i <= @Model.Rows; i++)
        {
            for (int j = 0; j < 3; j++)
            {
                var currentProduct = 3 * i + j;

                if (currentProduct == Model.Products.Count)
                {
                    break;
                }

                var product = @Model.Products[currentProduct];

                <div class="col-md-4 product" id="@product.CategoryID">

                    @if (product.Images.Count > 0)
                    {
                        <a href="~/Product/Details?id=@product.ProductID">
                            <img src="@Url.Content("~/HttpImageHandler.ashx?id=" + product.Images.FirstOrDefault().ImageID)" class="img-rounded" />
                        </a>
                    }
                    else
                    {
                        <a href="~/Product/Details?id=@product.ProductID">
                            <img src="~/Images/no_pic_small.gif" class="img-rounded" />
                        </a>
                    }

                    <div><h3><a href="~/Product/Details?id=@product.ProductID">@product.Name</a></h3></div>
                </div>
            }
        }
    </div>
    @Html.Partial("_PagingAjaxPartial", Model.PagingViewModel)
</div>