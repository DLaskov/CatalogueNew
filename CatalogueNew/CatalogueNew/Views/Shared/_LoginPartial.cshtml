@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-collapse collapse" }))
    {
        @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="pull-right">
            @Html.ActionLink("Hello, " + User.Identity.GetUserName() + "!", "Manage", "Auth", routeValues: null, htmlAttributes: new { title = "Manage", @class="main-parent" })
        </li>
        <li><a class="main-parent" href="@Url.Action("LogOut", "Auth")">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="main-parent" href=@Url.Action("Register", "Auth")>Register</a></li>
        <li><a class="main-parent" href="@Url.Action("LogIn", "Auth")">Log In</a></li>
    </ul>
}